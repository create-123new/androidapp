<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="#F8F8F8">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Health Progress"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2E7D32"
            android:layout_gravity="center"
            android:paddingBottom="12dp" />

        <TextView
            android:id="@+id/textViewLastCheckedLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Last Checked:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/textViewLastChecked"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="No data yet"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/textViewHealthStatusLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current Health Status:"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="#555555" />

        <TextView
            android:id="@+id/textViewHealthStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Not available"
            android:textSize="16sp"
            android:textColor="#333333"
            android:paddingBottom="8dp" />

        <TextView
            android:id="@+id/textViewAdvice"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Advice will appear here based on health status."
            android:textSize="15sp"
            android:textColor="#444444"
            android:paddingBottom="16dp" />

        <com.github.mikephil.charting.charts.LineChart
            android:id="@+id/lineChart"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginBottom="16dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginTop="8dp"
            android:weightSum="2">

            <Button
                android:id="@+id/buttonDietRecommendation"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="3dp"
                android:layout_weight="1"
                android:backgroundTint="#66BB6A"
                android:padding="5dp"
                android:text="Diet Recommendation"
                android:textAllCaps="false"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

        </LinearLayout>

    </LinearLayout>
</ScrollView>
